{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://qulab.ai/schemas/simtest/v1/test_case.schema.json",
  "title": "SIMTEST v1 Test Case",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "version",
    "domain",
    "description",
    "problem",
    "discretization",
    "tolerances",
    "references",
    "metrics"
  ],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "domain": { "type": "string", "enum": ["materials", "chemistry", "mechanics", "thermal", "cfd"] },
    "description": { "type": "string" },
    "tags": { "type": "array", "items": { "type": "string" } },
    "problem": {
      "type": "object",
      "description": "Domain-independent description of the physical problem.",
      "additionalProperties": true
    },
    "discretization": {
      "type": "object",
      "description": "Mesh, polynomial order, timestep, solver tolerances, etc.",
      "additionalProperties": true
    },
    "tolerances": {
      "type": "object",
      "description": "Mapping metric_name -> tolerance spec.",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type", "value"],
        "properties": {
          "type": { "type": "string", "enum": ["absolute", "relative_pct"] },
          "value": { "type": "number" }
        }
      }
    },
    "references": {
      "type": "object",
      "description": "Mapping reference_name -> number or array",
      "additionalProperties": {
        "oneOf": [
          { "type": "number" },
          {
            "type": "array",
            "items": { "type": "number" }
          }
        ]
      }
    },
    "metrics": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "reducer"],
        "properties": {
          "name": { "type": "string" },
          "reducer": { "type": "string", "enum": ["L2", "Linf", "MAE", "RMSE", "mean_pct_error", "F1", "AUROC", "custom"] },
          "target": { "type": "string" },
          "pass_if": { "type": "string", "enum": ["<=", "<", ">=", ">", "between"] },
          "range": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "number" }
          },
          "unit": { "type": "string" }
        }
      }
    },
    "domain_config": {
      "type": "object",
      "description": "Domain-specific configuration",
      "additionalProperties": true
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "uri"],
        "properties": {
          "name": { "type": "string" },
          "uri": { "type": "string" },
          "type": { "type": "string" }
        }
      }
    },
    "notes": { "type": "string" }
  }
}


